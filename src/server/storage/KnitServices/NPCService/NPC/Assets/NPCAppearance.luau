function AIAppearance:GetAsset(accessory: string, npcClass: string?, accessoryIsClassDependent: boolean): table | Color3 | number
    local result = nil
    
    if npcClass ~= nil and accessoryIsClassDependent == true and self.Storage[accessory][npcClass] then
        result = self.Storage
            [accessory]
            [npcClass]
            [Random.new(tick()):NextInteger(1, #self.Storage[accessory][npcClass])]
    else
        result = self.Storage
            [accessory]
            [Random.new(tick()):NextInteger(1, #self.Storage[accessory])]
    end
    
    return result
    
end

return AIAppearance
