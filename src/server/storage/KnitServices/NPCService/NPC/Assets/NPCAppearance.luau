function AIAppearance:GetAsset(accessory: string, npcClass: string?, accessoryIsClassDependent: boolean): {} | number | Color3
    local result = nil

    if npcClass ~= nil and accessoryIsClassDependent == true and self.Storage[accessory][npcClass] ~= nil then
        result = self.Storage
            [accessory]
            [npcClass]
            [Random.new(tick()):NextInteger(1, #self.Storage[accessory][npcClass])]
    else
        result = self.Storage
            [accessory]
            [Random.new(tick()):NextInteger(1, #self.Storage[accessory])]
    end
    
    return result
    
end

return AIAppearance
